{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist/",
      "rootDir": "./src/",
      "baseUrl": "./src/",
      "allowSyntheticDefaultImports": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "strict": true,
      "esModuleInterop": true,
    },
    "include": ["./src/**/*"]
  }